<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="1086.0" prefWidth="768.0" styleClass="root" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="frogger.controller.HomeController">
    <stylesheets>
        <URL value="@../css/home.css" />
      <URL value="@../css/musicbtn.css" />
    </stylesheets>
   <center>
      <VBox prefHeight="816.0" prefWidth="568.0" styleClass="menu" BorderPane.alignment="CENTER">
         <children>
            <Button id="start" mnemonicParsing="false" onAction="#startGame" prefHeight="180.0" prefWidth="280.0">
               <styleClass>
                  <String fx:value="menu__item" />
                  <String fx:value="menu__item--start" />
               </styleClass></Button>
            <Button id="scoreboard" mnemonicParsing="false" onAction="#showHelp" prefHeight="180.0" prefWidth="280.0">
               <styleClass>
                  <String fx:value="menu__item" />
                  <String fx:value="menu__item--help" />
               </styleClass></Button>
            <Button id="exit" mnemonicParsing="false" onAction="#exitGame" prefHeight="180.0" prefWidth="280.0">
               <styleClass>
                  <String fx:value="menu__item" />
                  <String fx:value="menu__item--exit" />
               </styleClass></Button>
         </children></VBox>
   </center>
   <left>
      <Pane prefHeight="816.0" prefWidth="100.0" BorderPane.alignment="CENTER" />
   </left>
   <right>
      <Pane prefHeight="816.0" prefWidth="100.0" BorderPane.alignment="CENTER" />
   </right>
   <bottom>
      <Pane prefHeight="160.0" prefWidth="768.0" BorderPane.alignment="CENTER" />
   </bottom>
   <top>
      <Pane prefHeight="110.0" prefWidth="768.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="musicoff" layoutX="675.0" layoutY="21.0" mnemonicParsing="false" prefHeight="70.0" prefWidth="70.0">
               <styleClass>
                  <String fx:value="music--off" />
                  <String fx:value="music" />
               </styleClass>
            </Button>
            <Button fx:id="musicon" layoutX="675.0" layoutY="21.0" mnemonicParsing="false" onAction="#switchMusicState" prefHeight="70.0" prefWidth="70.0">
               <styleClass>
                  <String fx:value="music--on" />
                  <String fx:value="music" />
               </styleClass></Button>
         </children>
      </Pane>
   </top>
</BorderPane>
