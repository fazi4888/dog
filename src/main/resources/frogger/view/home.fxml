<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="800.0" prefWidth="600.0" styleClass="root" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="frogger.controller.HomeController">
    <stylesheets>
        <URL value="@../css/home.css" />
    </stylesheets>
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" styleClass="menu" BorderPane.alignment="CENTER">
         <children>
            <Button id="start" mnemonicParsing="false" onAction="#startGame" prefHeight="80.0" prefWidth="220.0">
               <styleClass>
                  <String fx:value="menu__item--start" />
                  <String fx:value="menu__item" />
               </styleClass></Button>
            <Button id="scoreboard" mnemonicParsing="false" onAction="#showScoreboard" prefHeight="140.0" prefWidth="371.0">
               <styleClass>
                  <String fx:value="menu__item" />
                  <String fx:value="menu__item--scoreboard" />
               </styleClass></Button>
            <Button id="exit" mnemonicParsing="false" onAction="#exitGame" prefHeight="80.0" prefWidth="220.0">
               <styleClass>
                  <String fx:value="menu__item" />
                  <String fx:value="menu__item--exit" />
               </styleClass></Button>
         </children></VBox>
   </center>
   <left>
      <Pane prefHeight="441.0" prefWidth="100.0" BorderPane.alignment="CENTER" />
   </left>
   <right>
      <Pane prefHeight="441.0" prefWidth="100.0" BorderPane.alignment="CENTER" />
   </right>
   <bottom>
      <Pane prefHeight="159.0" prefWidth="600.0" BorderPane.alignment="CENTER" />
   </bottom>
   <top>
      <Pane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="musicoff" layoutX="526.0" layoutY="21.0" mnemonicParsing="false" prefHeight="46.0" prefWidth="49.0">
               <styleClass>
                  <String fx:value="music--off" />
                  <String fx:value="music" />
               </styleClass>
            </Button>
            <Button fx:id="musicon" layoutX="526.0" layoutY="21.0" mnemonicParsing="false" onAction="#switchMusicState" prefHeight="46.0" prefWidth="49.0">
               <styleClass>
                  <String fx:value="music--on" />
                  <String fx:value="music" />
               </styleClass></Button>
         </children>
      </Pane>
   </top>
</BorderPane>
